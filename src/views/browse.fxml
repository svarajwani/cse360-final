<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.BrowseController"
      spacing="12" style="-fx-padding: 20;">

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Category:"/>
        <ComboBox fx:id="catBox" prefWidth="220"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#logout"
                style="-fx-background-color:#d9534f; -fx-text-fill:white;"/>
    </HBox>

    <TreeTableView fx:id="tree" showRoot="false" prefHeight="600">
        <columns>
            <TreeTableColumn fx:id="colSelect" text="Select" prefWidth="75"/>
            <TreeTableColumn fx:id="colTitle" text="Title" prefWidth="120"/>
            <TreeTableColumn fx:id="colAuthor" text="Author" prefWidth="120"/>
            <TreeTableColumn fx:id="colPrice" text="Price" prefWidth="80"/>
            <TreeTableColumn fx:id="colCondition" text="Condition" prefWidth="100"/>
            <TreeTableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
            <TreeTableColumn fx:id="colQty" text="Qty" prefWidth="60"/>
        </columns>
    </TreeTableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Buy Selected Books" onAction="#handleBuyBook"
                style="-fx-background-color:#5cb85c; -fx-text-fill:white;"/>
    </HBox>
</VBox>