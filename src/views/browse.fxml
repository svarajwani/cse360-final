<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.BrowseController"
      spacing="12" style="-fx-padding: 20;">

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Category:"/>
        <ComboBox fx:id="catBox" prefWidth="220"/>
        <Button text="Load" onAction="#load"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Logout"
                style="-fx-background-color:#d9534f; -fx-text-fill:white;"
                onAction="#logout"/>
    </HBox>

    <TreeTableView fx:id="tree" showRoot="false" prefHeight="600">
        <columns>
            <TreeTableColumn fx:id="colTitle"  text="Title"  prefWidth="260"/>
            <TreeTableColumn fx:id="colAuthor" text="Author" prefWidth="180"/>
            <TreeTableColumn fx:id="colPrice"  text="Price"  prefWidth="80"/>
            <TreeTableColumn fx:id="colQty"    text="Qty"    prefWidth="60"/>
            <TreeTableColumn fx:id="colBuy"    text=""       prefWidth="70"/>
        </columns>
    </TreeTableView>
</VBox>
